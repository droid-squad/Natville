<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/baseline_person_black_18dp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivUserProfile"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvUsername"
        android:layout_toEndOf="@+id/ivUserProfile"
        android:text="Rank"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvLegacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRank"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivUserProfile"
        android:text="Legacy" />

    <TextView
        android:id="@+id/tvVisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivUserProfile"
        android:layout_below="@+id/ivUserProfile"
        android:text="Places Visited"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ivUserProfile"
        android:layout_marginBottom="185dp"
        android:text="Badges"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tvVisited"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/baseline_share_black_24dp" />

    <ImageView
        android:id="@+id/ivShare2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/tvBadges"
        android:src="@drawable/baseline_share_black_24dp" />

    <ImageView
        android:id="@+id/ivFakePlace"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/ivUserProfile"
        android:layout_below="@+id/tvVisited"
        app:srcCompat="@drawable/baseline_wallpaper_black_24dp" />

    <ImageView
        android:id="@+id/ivFakeBadge"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/tvBadges"
        android:layout_below="@+id/tvBadges"
        android:layout_marginTop="-170dp"
        app:srcCompat="@drawable/baseline_spa_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ivFakeBadge"
        android:layout_marginStart="85dp"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/ivFakeBadge"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivFakeBadge"
        android:layout_marginEnd="86dp"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/tvUsername"
        android:layout_alignTop="@+id/ivFakeBadge"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/ivUserProfile"
        android:layout_below="@+id/ivFakeBadge"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/ivLockedBadge"
        android:layout_alignTop="@+id/ivLockedBadge5"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/ivLockedBadge5"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/ivLockedBadge5"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge9"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/ivLockedBadge3"
        android:layout_alignTop="@+id/ivLockedBadge5"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />

    <ImageView
        android:id="@+id/ivLockedBadge10"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/ivShare"
        android:layout_alignTop="@+id/ivLockedBadge5"
        app:srcCompat="@drawable/baseline_lock_black_24dp" />


</RelativeLayout>