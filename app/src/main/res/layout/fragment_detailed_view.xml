<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedViewFragment">


    <ImageView
        android:id="@+id/ivPlaceDetailed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@color/Black"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tvNameDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPlaceDetailed"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_margin="5sp"/>

    <TextView
        android:id="@+id/tvSummaryDetailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvNameDetailed"
        android:layout_margin="5dp"
        android:text="Summary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvLocationDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSummaryDetailed"
        android:layout_margin="5dp"
        android:text="Location"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvLengthDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvSummaryDetailed"
        android:layout_margin="5dp"
        android:text="Length"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvRatingDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLocationDetailed"
        android:layout_margin="5dp"
        android:text="Rating"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDifficultyDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvLocationDetailed"
        android:layout_margin="5dp"
        android:text="Difficulty"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCondStatDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvRatingDetailed"
        android:layout_margin="5dp"
        android:text="Condition Status"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCondDetDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSummaryDetailed"
        android:layout_below="@+id/tvCondStatDetailed"
        android:layout_marginRight="5dp"
        android:text="Condition Details"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCondiUpDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCondDetDetailed"
        android:text="Condition Updated"
        android:layout_margin="5dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvAscentDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCondiUpDetailed"
        android:text="Ascent"
        android:layout_margin="5dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvHighDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvCondiUpDetailed"
        android:text="High"
        android:layout_margin="5dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvDescentDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAscentDetailed"
        android:text="Descent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvLowDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvAscentDetailed"
        android:text="Low"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="1sp"/>

    <TextView
        android:id="@+id/tvUrlDetailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="URL"
        android:layout_margin="5dp"
        android:textSize="10sp"/>
</RelativeLayout>