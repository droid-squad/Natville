<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailedViewFragment">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tvSummaryDetailed"
                app:srcCompat="@drawable/baseline_keyboard_backspace_black_24dp"
                 android:tint="@color/grey_6"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/ivPlaceDetailed"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:src="@color/Black" />

            <TextView
                android:id="@+id/tvNameDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPlaceDetailed"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Name"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSummaryDetailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvNameDetailed"
                android:layout_margin="10dp"
                android:text="Summary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvLocationDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvSummaryDetailed"
                android:layout_margin="10dp"
                android:text="Location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvLengthDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLocationDetailed"
                android:layout_margin="10dp"
                android:text="Length"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRatingDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLengthDetailed"
                android:layout_margin="10dp"
                android:text="Rating"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDifficultyDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvLengthDetailed"
                android:layout_margin="10dp"
                android:text="Difficulty"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCondStatDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvRatingDetailed"
                android:layout_margin="10dp"
                android:text="Condition Status"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCondDetDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvCondStatDetailed"
                android:layout_margin="10dp"
                android:text="Condition Details"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCondiUpDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvCondDetDetailed"
                android:layout_margin="10dp"
                android:text="Condition Updated"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvAscentDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvCondiUpDetailed"
                android:layout_margin="10dp"
                android:text="Ascent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvHighDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvCondiUpDetailed"
                android:layout_margin="10dp"
                android:text="High"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDescentDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvAscentDetailed"
                android:layout_margin="10dp"
                android:text="Descent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvLowDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvAscentDetailed"
                android:layout_margin="10dp"
                android:text="Low"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescentDetailed"
                android:layout_margin="10dp"
                android:layout_toStartOf="@+id/ivComplete"
                android:src="@drawable/baseline_add_circle_outline_black_24dp" />

            <ImageView
                android:id="@+id/ivComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescentDetailed"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_done_outline_black_24dp" />

            <ImageView
                android:id="@+id/ivShareDetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescentDetailed"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/ivComplete"
                android:src="@drawable/baseline_share_black_24dp" />

            <TextView
                android:id="@+id/tvUrlDetailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ivAdd"
                android:layout_margin="5dp"
                android:text="URL"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>